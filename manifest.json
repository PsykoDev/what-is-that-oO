{
  "manifest_version": 2,
  "author": "PsykoDev",
  "name": "Twitch Alert",
  "description": "blabla.",
  "version": "1.1.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "128": "img/icon_128.png"
  },
  "background": {
    "scripts": [ "js/background.js", "js/app.js" ],
    "persistent": true
  },
  "permissions": [
    "notifications",
    "storage",
    "background",
    "https://api.twitch.tv/*"
  ]
}